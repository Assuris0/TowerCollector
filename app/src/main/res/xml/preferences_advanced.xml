<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="@string/preferences_advanced_category_settings_key"
        android:title="@string/preferences_category_settings_title">
        <info.zamojski.soft.towercollector.controls.HtmlSummaryListPreference
            android:defaultValue="@string/preferences_collector_api_version_default_value"
            android:enabled="@bool/preferences_collector_api_version_enabled_default_value"
            android:entries="@array/preferences_collector_api_version_entries_labels"
            android:entryValues="@array/preferences_collector_api_version_entries_values"
            android:key="@string/preferences_collector_api_version_key"
            android:summary="@string/preferences_collector_api_version_summary"
            android:title="@string/preferences_collector_api_version_title" />
        <info.zamojski.soft.towercollector.controls.HtmlSummaryListPreference
            android:defaultValue="@string/preferences_file_logging_level_default_value"
            android:entries="@array/preferences_file_logging_level_entries_labels"
            android:entryValues="@array/preferences_file_logging_level_entries_values"
            android:key="@string/preferences_file_logging_level_key"
            android:summary="@string/preferences_file_logging_level_summary"
            android:title="@string/preferences_file_logging_level_title" />
        <SwitchPreference
            android:defaultValue="@bool/preferences_error_reporting_silent_default_value"
            android:key="@string/preferences_error_reporting_silent_key"
            android:summaryOff="@string/preferences_error_reporting_silent_off_summary"
            android:summaryOn="@string/preferences_error_reporting_silent_on_summary"
            android:title="@string/preferences_error_reporting_silent_title" />
        <PreferenceScreen
            android:key="@string/preferences_import_database_key"
            android:summary="@string/preferences_import_database_summary"
            android:title="@string/preferences_import_database_title" />
        <PreferenceScreen
            android:key="@string/preferences_export_database_key"
            android:summary="@string/preferences_export_database_summary"
            android:title="@string/preferences_export_database_title" />
        <PreferenceScreen
            android:key="@string/preferences_import_preferences_key"
            android:summary="@string/preferences_import_preferences_summary"
            android:title="@string/preferences_import_preferences_title" />
        <PreferenceScreen
            android:key="@string/preferences_export_preferences_key"
            android:summary="@string/preferences_export_preferences_summary"
            android:title="@string/preferences_export_preferences_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_category_help_title">
        <PreferenceScreen
            android:key="@string/preferences_about_collector_api_version_key"
            android:summary="@string/preferences_about_collector_api_version_summary"
            android:title="@string/preferences_about_collector_api_version_title" />
    </PreferenceCategory>

</PreferenceScreen>